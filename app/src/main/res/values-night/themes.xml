<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Application" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Tema para Login y Register con ActionBar blanca y sin tÃ­tulo - NIGHT MODE -->
    <style name="Theme.Application.Auth" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- IMPORTANTE: colorPrimary NEGRO para el cursor -->
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryVariant">#000000</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Status bar blanca -->
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Elevation 0 para ActionBar plana -->
        <item name="elevation">0dp</item>
        <!-- Color del cursor y controles NEGRO -->
        <item name="colorAccent">#000000</item>
        <item name="colorControlActivated">#000000</item>
        <item name="colorControlNormal">#666666</item>
        <item name="android:textColorHighlight">#CCCCCC</item>
        <item name="editTextColor">#000000</item>
        <item name="android:textColor">#000000</item>
        <!-- Texto negro -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">#666666</item>
    </style>

    <!-- Tema para MainActivity con ActionBar blanca - NIGHT MODE -->
    <style name="Theme.Application.WhiteActionBar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- ActionBar blanca -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryVariant">@android:color/white</item>
        <item name="colorOnPrimary">@android:color/black</item>
        <!-- Status bar blanca -->
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- ActionBar elevation -->
        <item name="elevation">0dp</item>
        <!-- Cursor negro -->
        <item name="colorAccent">#000000</item>
        <item name="colorControlActivated">#000000</item>
        <item name="android:textCursorDrawable">@drawable/cursor_black</item>
        <!-- Iconos oscuros en ActionBar -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>
</resources>