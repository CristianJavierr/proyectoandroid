rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Reglas para la carpeta de imágenes de chat
    match /chat_images/{userId}/{imageId} {
      // Permitir subir imágenes solo si el usuario está autenticado
      // y el userId coincide con el usuario autenticado
      allow write: if request.auth != null && 
                    request.auth.uid == userId &&
                    request.resource.size < 5 * 1024 * 1024 && // Máximo 5MB
                    request.resource.contentType.matches('image/.*'); // Solo imágenes
      
      // Permitir leer imágenes si el usuario está autenticado
      allow read: if request.auth != null;
    }
  }
}
